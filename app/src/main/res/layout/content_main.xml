<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:src="@drawable/cover_page"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    android:background="#808fee"
    tools:context=".MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_alignTop="@+id/buttonTracking"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/buttonTracking"
        android:layout_alignEnd="@+id/buttonTracking">

    </android.support.v4.view.ViewPager>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Walkes Home Page"
        android:id="@+id/button5"
        android:layout_marginTop="3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClick" />


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonBooking"
            android:src="@drawable/booking"
            android:onClick="onClick"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Click For Booking &amp; Registration"
            android:id="@+id/textView3"
            android:layout_marginTop="20dp"
            android:layout_alignBottom="@+id/buttonBooking"
            android:layout_toRightOf="@+id/buttonBooking"
            android:layout_alignRight="@+id/button5"
            android:layout_alignEnd="@+id/button5" />

    </TableRow>
    <TableRow>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonTracking"
            android:src="@drawable/walk"
            android:onClick="onClick"
            android:layout_below="@+id/buttonBooking"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Click here for Walking Pets"
            android:id="@+id/textView4"
            android:layout_alignBottom="@+id/buttonTracking"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="62dp" />

    </TableRow>
    <TableRow>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPooch"
            android:src="@drawable/track_my_walk1"
            android:onClick="onClick"
            android:layout_below="@+id/buttonTracking"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tracking and Mapping"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </TableRow>

</TableLayout>
